<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_3"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/home_bg_3_circle" />

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:background="@drawable/home_logo_2"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_summary"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/home_school_summary_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_traffic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/iv_summary"
            android:contentDescription="@string/app_name"
            android:src="@drawable/home_traffic_3" />

        <ImageView
            android:id="@+id/iv_reports"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/iv_traffic"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/iv_setting"
            android:background="@drawable/home_school_reports_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_job"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/iv_reports"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/iv_setting"
            android:background="@drawable/home_job_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:background="@drawable/home_sys_setting_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_consult"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/iv_online"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_summary"
            android:background="@drawable/home_consult_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_online"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_video"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/iv_summary"
            android:background="@drawable/home_online_3"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:layout_toLeftOf="@+id/iv_summary"
            android:background="@drawable/home_video_3"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

</ScrollView>